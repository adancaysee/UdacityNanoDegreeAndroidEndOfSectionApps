<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/nav_graph"
    app:startDestination="@id/reminderListFragment">
    <fragment
        android:id="@+id/reminderListFragment"
        android:name="com.udacity.locationreminder.reminderlist.ReminderListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_reminders_list">
        <action
            android:id="@+id/action_open_detail"
            app:destination="@id/reminderDetailFragment" />
        <action
            android:id="@+id/action_save_reminder"
            app:destination="@id/saveReminderFragment" />
        <action
            android:id="@+id/action_login"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.udacity.locationreminder.auth.LoginFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_login"/>
    <fragment
        android:id="@+id/reminderDetailFragment"
        android:name="com.udacity.locationreminder.reminderdetail.ReminderDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_reminder_detail"/>
    <fragment
        android:id="@+id/saveReminderFragment"
        android:name="com.udacity.locationreminder.savereminder.SaveReminderFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_save_reminder">
        <action
            android:id="@+id/action_select_location"
            app:destination="@id/selectLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectLocationFragment"
        android:name="com.udacity.locationreminder.savereminder.SelectLocationFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_select_location"/>
</navigation>