<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login_destination">

    <fragment
        android:id="@+id/login_destination"
        android:name="com.udacity.shoestore.screens.login.LoginFragment"
        android:label="@string/title_login_fragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_destination_to_welcome_destination"
            app:destination="@id/welcome_destination"
            app:popUpTo="@id/shoeListFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcome_destination"
        android:name="com.udacity.shoestore.screens.title.WelcomeFragment"
        tools:layout="@layout/fragment_welcome"
        android:label="@string/title_fragment_welcome">
        <action
            android:id="@+id/action_welcome_destination_to_instructionsFragment"
            app:destination="@id/instructions_destination" />
    </fragment>
    <fragment
        android:id="@+id/instructions_destination"
        android:name="com.udacity.shoestore.screens.title.InstructionsFragment"
        android:label="@string/title_fragment_instructions"
        tools:layout="@layout/fragment_instructions">
        <action
            android:id="@+id/action_instructions_destination_to_shoeListFragment"
            app:destination="@id/shoeListFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/shoeListFragment"
        android:name="com.udacity.shoestore.screens.shoe_list.ShoeListFragment"
        android:label="@string/title_fragment_shoe_list"
        tools:layout="@layout/fragment_shoe_list">
        <action
            android:id="@+id/action_shoeListFragment_to_shoeDetailFragment"
            app:destination="@id/shoeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/shoeDetailFragment"
        android:name="com.udacity.shoestore.screens.shoe_detail.ShoeDetailFragment"
        android:label="@string/title_fragment_shoe_detail"
        tools:layout="@layout/fragment_shoe_detail"/>
</navigation>